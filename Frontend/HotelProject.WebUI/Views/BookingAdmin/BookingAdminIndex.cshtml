@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyonlar </h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr >
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@(((DateTime)item.Checkin).ToString("dd-mmm-yyyy"))</td>
                                    <td>@(((DateTime)item.CheckOut).ToString("dd-mmm-yyyy"))</td>
                                    <td><span class="badge bg-primary px-2 text-white">@item.Status</span></td>
                                    <td><a href="/BookingAdmin/ApprovedReservation/@item.BookingId" class="btn btn-outline-primary">Onayla</a></td>
                                    <td><a href="#" class="btn btn-outline-danger">İptal Et</a></td>
                                    <td><a href="#" class="btn btn-outline-warning">Beklet</a></td>
                                    <td><a href="#" class="btn btn-outline-warning">Güncelle</a></td>
                                    <td><a href="#" class="btn btn-outline-warning">Detaylar</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-danger">Henüz rezervasyon bulunmamaktadır.</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>